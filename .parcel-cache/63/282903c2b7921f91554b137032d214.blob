html,
body {
  height: 100%;
  width: 100%;
  background-color: bisque;
}

.app-container {
  background-color: bisque;
  height: 100%;
}

#bootstrap-overrides .btn {
  font-size: larger;
  border-color: violet;
  padding: 10px;
  margin-right: 10px;
}

#bootstrap-overrides img {
  border-style: solid;
  border-color: violet;
}

#bootstrap-overrides .card {
  background-color: whitesmoke;
  border-color: violet;
}
#bootstrap-overrides .card .card-body {
  background-color: whitesmoke;
}
#bootstrap-overrides .card .card-header {
  font-size: 3rem;
}

#bootstrap-overrides .card-subtitle {
  color: dimgrey;
  padding-bottom: 10px;
  font-size: 1.4em;
}

#bootstrap-overrides .card-body {
  background-color: whitesmoke;
}